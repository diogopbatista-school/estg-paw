<!DOCTYPE html>
<html lang="pt">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Criar Menu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <link href="/stylesheets/menu/register.css" rel="stylesheet" />
  </head>

  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg">
      <div class="container-fluid">
        <a
          class="navbar-brand"
          href="#">
          <i class="fas fa-utensils me-2"></i>Criar Menu
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div
          class="collapse navbar-collapse"
          id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a
                class="nav-link"
                href="/restaurants/dashboard/<%= restaurantId %>">
                <i class="fas fa-arrow-left me-1"></i> Voltar
              </a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link"
                href="/user/logout">
                <i class="fas fa-sign-out-alt me-1"></i> Logout
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Formulário de Criação de Menu -->
    <div class="container mt-5">
      <div class="form-container">
        <h1><i class="fas fa-list-alt me-2"></i>Criar Novo Menu</h1>

        <% if (error) { %>
        <div class="alert alert-danger"><i class="fas fa-exclamation-triangle me-2"></i><%= error %></div>
        <% } %>

        <form
          action="/menus/submitRegister"
          method="POST">
          <input
            type="hidden"
            name="restaurantId"
            value="<%= restaurantId %>" />
          <div class="mb-4">
            <label
              for="name"
              class="form-label"
              >Nome do Menu</label
            >
            <div class="input-group">
              <span class="input-group-text"><i class="fas fa-tag"></i></span>
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                placeholder="Digite o nome do menu"
                required />
            </div>
            <small class="form-text text-muted mt-1">Escolha um nome descritivo para o seu menu.</small>
          </div>

          <div class="d-flex justify-content-between mt-4">
            <a
              href="/restaurants/dashboard/<%= restaurantId %>"
              class="btn btn-secondary">
              <i class="fas fa-times me-2"></i>Cancelar
            </a>
            <button
              type="submit"
              class="btn btn-success">
              <i class="fas fa-save me-2"></i>Criar Menu
            </button>
          </div>
        </form>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>

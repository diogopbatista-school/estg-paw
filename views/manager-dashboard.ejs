<!DOCTYPE html>
<html lang="pt">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0" />
    <title>Painel Manager</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
  </head>
  <body>
    <% if (error) { %>
    <div
      class="alert alert-danger"
      role="alert">
      <%= error %>
    </div>
    <% } %>

    <div class="container mt-5">
      <h2>Painel do Manager</h2>
      <p>Bem-vindo, <%= user.name %>! Aqui estão os seus restaurantes:</p>

      <!-- Botão para Criar Restaurante -->
      <a
        href="/restaurants/create"
        class="btn btn-success mb-3">
        Criar Restaurante
      </a>

      <!-- Botão para Voltar -->
      <a
        href="/users/dashboard"
        class="btn btn-secondary mb-3">
        Voltar
      </a>

      <% if (restaurants.length > 0) { %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Localização</th>
            <th>Telefone</th>
            <th>Verificado</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% restaurants.forEach(function (restaurant) { %>
          <tr>
            <td><%= restaurant.name %></td>
            <td><%= restaurant.description || "Sem descrição" %></td>
            <td>
              Latitude: <%= restaurant.location.latitude %><br />
              Longitude: <%= restaurant.location.longitude %>
            </td>
            <td><%= restaurant.phone %></td>
            <td>
              <% if (restaurant.verified) { %>
              <span class="badge bg-success">Sim</span>
              <% } else { %>
              <span class="badge bg-danger">Não</span>
              <% } %>
            </td>
            <td>
              <a
                href="/restaurants/manage/<%= restaurant._id %>"
                class="btn btn-primary btn-sm">
                Abrir Restaurante
              </a>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
      <% } else { %>
      <p class="text-muted">Nenhum restaurante associado.</p>
      <% } %>
    </div>
  </body>
</html>

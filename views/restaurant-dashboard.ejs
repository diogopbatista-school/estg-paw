<!DOCTYPE html>
<html lang="pt">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0" />
    <title>Detalhes do Restaurante</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <style>
      body {
        background: linear-gradient(to right, #ff7e5f, #feb47b);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: Arial, sans-serif;
      }
      .container {
        max-width: 800px;
        background: rgba(255, 255, 255, 0.9);
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
      }
      h2 {
        color: #007bff;
        text-align: center;
        font-weight: bold;
      }
      .list-group-item {
        background: #fff3e0;
        border-radius: 8px;
        margin-bottom: 10px;
      }
      .btn {
        width: 100%;
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h2>Detalhes do Restaurante</h2>
      <p><strong>Nome:</strong> <%= restaurant.name %></p>

      <h3>Menu</h3>
      <% if (restaurant.menu && restaurant.menu.length > 0) { %>
      <ul class="list-group">
        <% restaurant.menu.forEach(function (item) { %>
        <li class="list-group-item">
          <strong><%= item.name %></strong> - <%= item.price.toFixed(2) %>€
          <p><%= item.description || "Sem descrição" %></p>
        </li>
        <% }); %>
      </ul>
      <% } else { %>
      <p class="text-muted">Este restaurante ainda não possui um menu.</p>
      <% } %>

      <!-- Botão para Gerenciar o Menu -->
      <a
        href="/restaurants/manage/<%= restaurant._id %>/menu"
        class="btn btn-primary mt-3"
        >Gerenciar Menu</a
      >

      <!-- Botão para Voltar -->
      <a
        href="/restaurants/manage"
        class="btn btn-secondary mt-3"
        >Voltar</a
      >
    </div>
  </body>
</html>
